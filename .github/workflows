name: Build and Deploy to Hostinger

on:
  push:
    branches:
      - main # The branch where you want to trigger the action

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "14" # Specify your node version

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build

      - name: Deploy to build-branch
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          # Configure git
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

          # Clone the build-branch into a separate directory
          git clone --single-branch --branch build-branch https://github.com/Jl115/portfolio_jl_ts.git build-branch

          # Navigate to the build-branch directory
          cd build-branch

          # Remove all existing files in the build-branch
          rm -rf *

          # Copy the new build files from the dist directory
          cp -r ../dist/* .

          # Add and commit the changes
          git add .
          git commit -m "Deploying updated build"

          # Push the changes to build-branch
          git push origin build-branch
